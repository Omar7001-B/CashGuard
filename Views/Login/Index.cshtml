@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cash Gaurd</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Include your CSS file -->
    <style>

    </style>
</head>
<body>

    @{
        string containerplce;
        if(Model==null)
        {
            containerplce = "container";
        }
        else
        {
            containerplce = "container right-panel-active";
        }
    }
    <div class="@containerplce" id="container">
        <div class="form-container sign-up-container">
            <form method="post" action="/Login/AddNew" enctype="multipart/form-data">
                <h1>Create Account</h1>

                <span></span>

                <div class="profile-pic-container">
                    <input type="file" name="file" id="photoUpload" accept="image/*" onchange="previewPhoto(this)" hidden />
                    <div class="profile-pic" id="photoPreview"></div>
                    <label for="photoUpload" class="upload-icon">+</label>
                </div>

                <!-- User Name -->
                <input asp-for="User_Name" name="User_Name" placeholder="User Name" required="" />
                <span asp-validation-for="User_Name" class="text-danger" style="color: red;"></span>

                <!-- First Name -->
                <input asp-for="First_Name" name="First_Name" placeholder="First Name" required="" />
                <span asp-validation-for="First_Name" class="text-danger" style="color: red;"></span>

                <!-- Last Name -->
                <input asp-for="Last_Name" name="Last_Name" placeholder="Last Name" required="" />
                <span asp-validation-for="Last_Name" class="text-danger" style="color: red;"></span>

                <!-- Email -->
                <input asp-for="Email" name="Email" placeholder="Email" required="" />
                <span asp-validation-for="Email" class="text-danger" style="color: red;"></span>

                <!-- Phone Number -->
                <input asp-for="Phone_Number" name="Phone_Number" placeholder="Phone Number" required="" />
                <span asp-validation-for="Phone_Number" class="text-danger" style="color: red;"></span>

                <!-- Bank Account ID -->
                <input asp-for="Bank_Account_ID" name="Bank_Account_ID" placeholder="Bank Account" required="" />
                <span asp-validation-for="Bank_Account_ID" class="text-danger" style="color: red;"></span>

                <!-- Password -->
                <input asp-for="Password" name="Password" placeholder="Password" required="" />
                <span asp-validation-for="Password" class="text-danger" style="color: red;"></span>

                <!-- Confirm Password -->
                <input type="password" name="Confirm_Password" placeholder="Confirm your password" required="" />

                <!-- Hidden input for file -->
                <input type="hidden" name="file" />

                <!-- Submit and reset buttons -->
                <pre></pre>
                <pre></pre>
                <button type="submit">Sign Up</button>
                <pre></pre>
                <button type="reset"> reset  </button>
            </form>
        </div>

        <div class="form-container sign-in-container">
            <form method="post" action="/Login/check_sign">
                <h1>Sign in</h1>

                <pre> </pre>
                <input type="text" name="username" placeholder="Email / User Name " />
                <input type="password" name="password" placeholder="Password" />
                <pre> </pre>
                <a href="#">Forgot your password?</a>

                <button type="submit">Sign In</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>
                        Don't have account !
                    </h1>
                    <pre> </pre>
                    <p>Don't worry it is easy to have an account with us, we just need to know more about you !</p>
                    <pre> </pre>
                    <pre> </pre>
                    <pre> </pre>
                    <pre> </pre>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>




    <script src="/js/login.js"></script> <!-- Include your JavaScript file -->

</body>
</html>
