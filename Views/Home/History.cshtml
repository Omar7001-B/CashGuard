@{
    ViewData["Title"] = "History";
}
<link rel="stylesheet" href="/css/NewBar.css">

<h1 class="text-center mb-4">History</h1>
<br />
<div class="table-container">
    <div class="table-responsive">
        <table id="history-table" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Operation Type</th>
                    <th>Details</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OperationType</td>
                        <td>@item.Details</td>
                        <td>@item.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

